{
  "manifest_version": 2,
  "name": "Privacy Guard",
  "description": "Understand and control your online privacy. Analyze terms, cookies, and trackers before sharing your data.",
  "version": "2.0.0",
  "author": "Privacy Guard Team",
  "applications": {
    "gecko": {
      "id": "privacy-guard@privacyguard.com",
      "strict_min_version": "109.0"
    }
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_title": "Privacy Guard",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "cookies",
    "<all_urls>",
    "webRequest",
    "webNavigation"
  ],
  "background": {
    "scripts": ["background/firefox-background.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content.js",
        "content/detector.js",
        "content/banner-detector.js",
        "content/highlighter.js",
        "content/overlay.js"
      ],
      "run_at": "document_idle",
      "css": ["content/content.css"]
    }
  ],
  "options_page": "options/options.html",
  "web_accessible_resources": [
    "assets/*",
    "onboarding/*"
  ],
  "content_security_policy": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
}

